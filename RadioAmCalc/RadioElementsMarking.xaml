<Page x:Class="RadioAmCalc.RadioElementsMarking"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RadioAmCalc"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RadioElementsMarking">
    <Grid Background="#FFE2E2E2">
        <Button Content="Зачинити" HorizontalAlignment="Left" Height="35" Margin="10,0,0,10" Width="120" VerticalAlignment="Bottom" Click="CloseTab"/>
        <StackPanel Margin="20,20,625,315" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Label HorizontalAlignment="Center" FontSize="16">Вибір радіоелементів</Label>
            <RadioButton Content="Резистор" Height="20" Width="125" HorizontalAlignment="Left" Margin="20,0,0,0" FontSize="14" Checked="Resistor_Checked"/>
            <RadioButton Content="Конденсатор" Height="20" Width="125" HorizontalAlignment="Left" Margin="20,0,0,0" FontSize="14"/>
            <RadioButton Content="Дросель" Height="20" Width="125" HorizontalAlignment="Left" Margin="20,0,0,0" FontSize="14"/>
        </StackPanel>
        <Image Margin="510,20,25,269" Source="/display.png" Stretch="Fill"/>
        <Image Margin="245,57,0,0" Source="/resistor.png" Stretch="Fill" x:Name="resistor" HorizontalAlignment="Left" Width="250" MaxWidth="250" MaxHeight="55" Height="98" ScrollViewer.VerticalScrollBarVisibility="Disabled" VerticalAlignment="Top">
            <Image.Effect>
                <DropShadowEffect/>
            </Image.Effect>
        </Image>
        <Label Style="{StaticResource DigitalFont}" FontSize="48" Content="3.2" HorizontalAlignment="Right" Height="71" Margin="0,65,125,0" VerticalAlignment="Top" Width="136" Foreground="Black" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" />
        <Label FontSize="36" Content="Ω" HorizontalAlignment="Right" Margin="0,65,54,314" Width="81" VerticalContentAlignment="Center" FontFamily="Calibri" Padding="10,11.5,5,5"/>

    </Grid>
</Page>
