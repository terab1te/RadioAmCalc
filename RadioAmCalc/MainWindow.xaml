<Window x:Class="RadioAmCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioAmCalc"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Калькулятор Радіолюбителя" Height="450" Width="800">
    <Grid>
        <Menu Height="20" VerticalAlignment="Top">
            <MenuItem Header="Файл" BorderThickness="0,0,0,0" Height="20">
                <MenuItem Header="Вихід" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
            </MenuItem>
        </Menu>
        <TextBlock HorizontalAlignment="Center" Height="20" Margin="0,409,0,0" TextWrapping="Wrap" Text="Почніть розрахунки" VerticalAlignment="Center" Width="800"/>
        <TabControl Margin="0,20,0,25">
            <TabItem Header="Про програму">
                <Grid Background="White">
                    <Button Content="Вийти" HorizontalAlignment="Left" Height="35" Margin="10,279,0,37" Width="120" Click="Exit"/>
                </Grid>
            </TabItem>
        </TabControl>
        
    </Grid>
</Window>
